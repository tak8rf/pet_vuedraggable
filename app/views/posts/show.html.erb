<p id="notice"><%= notice %></p>  
  <div class="col-4">
    <p>
      <strong>タイトル</strong>
      <%= @post.title %>
    </p>
    <p>
      <strong>ペット:</strong>
      <%= @post.pet.name %>
    </p>
    <p>
      <strong>内容</strong>
      <%= @post.content %>
    </p>
    <p>
      <strong>日時</strong>
      <%= @post.start_time.strftime("%m-%d") %>
    </p>
    <% if user_signed_in? %>
      <%= link_to '編集', edit_post_path(@post) %>
      <%= link_to '消去',post_path(@post.id), method: :delete, data: { confirm: '本当に?' } %>
    <% end %>
    <%= link_to '戻る', posts_path %>
  </div>
