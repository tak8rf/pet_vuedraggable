<div class="col-4">
  <%= form_with(model: @task, local: true) do |form| %>
    <div class="title">
      <div class="form-tag">タイトル</div>
      <%= form.text_field :title %>
    </div>
    <div class="name">
    <div class="form-tag">ペット名</div>
    <%= form.collection_select(:pet_id,@pets,:id,:name)%>
    </div>
    <div class="content">
      <div class="form-tag">内容</div>
      <%= form.text_field :content %>
    </div>
      <div class="time">
      <div class="form-tag">時間</div>
      <%= form.datetime_select :start_time %>
    </div>
    <br>
    <div class="submit">
      <%= form.submit %>
    </div>
  <% end %>
  <br>
  <%= link_to '戻る', :back %>
